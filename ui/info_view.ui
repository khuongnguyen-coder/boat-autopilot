<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>

  <object class="GtkBox" id="main_box">
    <property name="orientation">vertical</property>
    <property name="spacing">10</property>
    <property name="halign">center</property>
    <property name="valign">center</property>
    <property name="margin-top">20</property>
    <property name="margin-bottom">20</property>
    <property name="margin-start">20</property>
    <property name="margin-end">20</property>

    <child>
      <object class="GtkLabel" id="speed_label">
        <property name="label">Speed: 0.0 knots</property>
        <property name="xalign">0.5</property>
      </object>
    </child>

    <child>
      <object class="GtkImage" id="boat_image">
        <property name="icon-name">image-missing</property>
        <property name="pixel-size">128</property>
      </object>
    </child>

    <child>
      <object class="GtkBox" id="coord_box">
        <property name="orientation">horizontal</property>
        <property name="spacing">20</property>
        <property name="halign">center</property>

        <child>
          <object class="GtkLabel" id="lat_label">
            <property name="label">Lat: 0.000000</property>
          </object>
        </child>

        <child>
          <object class="GtkLabel" id="lon_label">
            <property name="label">Lon: 0.000000</property>
          </object>
        </child>
      </object>
    </child>
  </object>
</interface>
